<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#6691D7">

        <Button
            android:id="@+id/btn_close"
            style="@style/btnClose" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="物料列表"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/btn_blue2_selector"
            android:ems="2"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_stockGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46dp"
        android:layout_marginLeft="@dimen/_6dp"
        android:layout_marginRight="@dimen/_6dp"
        android:layout_marginTop="@dimen/_6dp"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/back_style_blue_gray"
            android:textColor="@color/c_666666"
            android:text="仓库"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_stockArea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue_gray"
            android:textColor="@color/c_666666"
            android:text="库区"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_storageRack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/back_style_blue_gray"
            android:text="货架"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_stockPos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/back_style_blue_gray"
            android:text="库位"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue"
            android:hint="请输入查询的关键字"
            android:inputType="none"
            android:maxLength="30"
            android:paddingLeft="3dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/btn_blue_selector"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/c_d8d8d8" />

    <ykk.xc.com.wms.util.xrecyclerview.XRecyclerView
        android:id="@+id/xRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38dp"
        android:background="@drawable/btn_blue2_selector"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp" />

</LinearLayout>
